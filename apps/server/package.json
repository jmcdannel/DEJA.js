{
  "name": "deja-serverts",
  "version": "0.0.1",
  "private": false,
  "description": "NodeJS Websocket Server that processes DCC commands and sends them via Serial over USB to an Arduino Mega running DCC-EX EX-CommandStation.",
  "author": "Josh McDannel",
  "license": "MIT",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch index.ts",
    "start": "tsx index.ts",
    "deja": "npm run start",
    "mosquitto": "tsx src/scripts/start-mqtt.ts",
    "check-mqtt": "tsx src/scripts/check-mqtt.ts",
    "migrate-sounds": "tsx src/scripts/migrate-sound-effects.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/modules": "workspace:*",
    "@repo/sounds": "workspace:*",
    "@serialport/parser-readline": "^12.0.0",
    "dotenv": "^16.3.1",
    "firebase": "^10.14.1",
    "play-sound": "^1.1.6",
    "serialport": "^12.0.0",
    "signale": "^1.4.0",
    "wait-on": "^7.0.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/firebase-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tsconfig/node-ts": "^23.6.1",
    "@types/play-sound": "^1.1.2",
    "@types/signale": "^1.4.7",
    "@types/ws": "^8.18.1",
    "firebase-admin": "^13.4.0",
    "globals": "^16.0.0",
    "mqtt": "^5.13.1",
    "tsx": "^4.20.4",
    "typescript": "*",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">= 20"
  }
}
