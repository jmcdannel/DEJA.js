{
  "name": "deja-serverts",
  "version": "0.0.1",
  "description": "NodeJS Websocket Server that processes DCC commands and sends them via Serial over USB to an Arduino Mega running DCC-EX EX-CommandStation.",
  "main": "index.ts",
  "author": "Josh McDannel",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "tsx ./index.ts",
    "start": "tsx ./index.ts",
    "lint": "eslint",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit --skipLibCheck --composite false"
  },
  "type": "module",
  "dependencies": {
    "@repo/modules": "workspace:*",
    "@serialport/parser-readline": "^12.0.0",
    "dotenv": "^16.3.1",
    "firebase": "^10.14.1",
    "mqtt": "^5.3.4",
    "serialport": "^12.0.0",
    "signale": "^1.4.0",
    "wait-on": "^7.0.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/firebase-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tsconfig/node-ts": "^23.6.1",
    "@types/signale": "^1.4.7",
    "@types/ws": "^8.18.1",
    "firebase-admin": "^13.4.0",
    "globals": "^15.6.0",
    "tsx": "^4.19.4",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">= 20"
  }
}