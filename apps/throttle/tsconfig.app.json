{
  "extends": "@repo/typescript-config/vue-library",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "../../packages/**/*"],
  "exclude": ["src/**/__tests__/*", "dist", "build", "node_modules", "../../packages/**/*.stories.*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/*": ["../../packages/*"]
    },
    "types": ["@repo/typescript-config/vue-library"]
  }
}
