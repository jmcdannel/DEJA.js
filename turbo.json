{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "**/.env"
  ],
  "globalEnv": [
    "ENABLE_MQTT",
    "ENABLE_DEJACLOUD",
    "ENABLE_WS",
    "LAYOUT_ID",
    "VITE_FIREBASE_API_KEY",
    "VITE_FIREBASE_AUTH_DOMAIN",
    "VITE_FIREBASE_DATABASE_URL",
    "VITE_MQTT_BROKER",
    "VITE_MQTT_PORT",
    "VITE_FIREBASE_PROJECT_ID",
    "VITE_FIREBASE_STORAGE_BUCKET",
    "VITE_FIREBASE_MESSAGING_SENDER_ID",
    "VITE_FIREBASE_APP_ID",
    "VITE_WS_PORT",
    "VITE_WS_ID",
    "BLOB_READ_WRITE_TOKEN"
  ],
  "ui": "tui",
  "tasks": {
    "build": {},
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "outputs": ["storybook-static/**"]
    },
    "start": {
      "dependsOn": ["check-mqtt"],
      "cache": false,
      "persistent": true
    },
    "start:all": {
      "dependsOn": ["check-mqtt"],
      "cache": false,
      "persistent": true
    },
    "deja": {
      "dependsOn": ["check-mqtt"],
      "cache": false,
      "persistent": true
    },
    "predev": {},
    "lint": {},
    "format": {},
    "type-check": {},
    "dev": {
      "dependsOn": ["check-mqtt"],
      "cache": false,
      "persistent": true
    },
    "mosquitto": {
      "cache": false,
      "persistent": true
    },
    "check-mqtt": {
      "cache": false,
      "outputs": []
    },
    "scan-sounds": {
      "cache": false,
      "outputs": []
    },
    "deps:check": {
      "cache": false
    },
    "deps:fix": {
      "cache": false
    }
  }
}