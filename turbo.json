{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "**/.env"
  ],
  "globalEnv": [
    "ENABLE_MQTT",
    "ENABLE_DEJACLOUD",
    "ENABLE_WS",
    "LAYOUT_ID",
    "VITE_FIREBASE_API_KEY",
    "VITE_FIREBASE_AUTH_DOMAIN",
    "VITE_FIREBASE_DATABASE_URL",
    "VITE_MQTT_BROKER",
    "VITE_MQTT_PORT",
    "VITE_FIREBASE_PROJECT_ID",
    "VITE_FIREBASE_STORAGE_BUCKET",
    "VITE_FIREBASE_MESSAGING_SENDER_ID",
    "VITE_FIREBASE_APP_ID",
    "VITE_WS_PORT",
    "VITE_WS_ID"
  ],
  "ui": "tui",
  "tasks": {
    "build": {},
    "start": {
      "dependsOn": ["mosquitto"],
      "cache": false,
      "persistent": true
    },
    "start:all": {
      "dependsOn": ["mosquitto"],
      "cache": false,
      "persistent": true
    },
    "predev": {},
    "lint": {},
    "format": {},
    "type-check": {},
    "dev": {
      "dependsOn": ["mosquitto"],
      "cache": false,
      "persistent": true
    },
    "mosquitto": {
      "cache": false
    },
    "deps:check": {
      "cache": false
    },
    "deps:fix": {
      "cache": false
    },
    "deps:format": {
      "cache": false
    }
  }
}