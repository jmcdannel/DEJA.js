    "deja": "turbo run deja --filter=deja-serverts --filter=deja-monitor",
    "scan-sounds": "turbo run scan-sounds --filter=@repo/sounds"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pm2": "^5.4.2",
    "syncpack": "^13.0.4",
